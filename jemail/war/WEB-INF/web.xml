<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  
     <servlet>
    <servlet-name>mh</servlet-name>
    <servlet-class>jem.mh</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>mh</servlet-name>
    <url-pattern>/mh</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>jem.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/jemail/greet</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Jemail.html</welcome-file>
  </welcome-file-list>

</web-app>
